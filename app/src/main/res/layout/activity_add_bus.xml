<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffaa00">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add your bus"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="15dp"
            android:background="@drawable/section"
            android:layout_margin="20dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="start city"
                android:id="@+id/startCity"
                android:paddingLeft="20dp"
                android:background="@drawable/text_a"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="end city"
                android:id="@+id/endCity"
                android:paddingLeft="20dp"
                android:background="@drawable/text_a"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Bus Number"
                android:id="@+id/busNumber"
                android:paddingLeft="20dp"
                android:background="@drawable/text_a"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Seat count"
                android:id="@+id/SeatCount"
                android:paddingLeft="20dp"
                android:background="@drawable/text_a"
                android:layout_margin="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Time"
                android:id="@+id/time"
                android:paddingLeft="20dp"
                android:background="@drawable/text_a"
                android:layout_margin="10dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:id="@+id/btnadd"
                android:text="add bus"
                android:background="@drawable/dash_back"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>